<%- include('./partials/header') -%>
    <h1>Home</h1>
    <p>
        <%= homeContent %>
    </p>




    <div class="post">
        <%posts.forEach((post)=> { %>
            <h1>
                <%=post.title %>
            </h1>
                <%if (post.content.length > 100) {%>
                <p><%=post.content.substring(0, 100) + "..." %></p>
                <a href="/post/<%= post._id %>">Read more</a>
                <%} else {%>
                    <p><%=post.content%></p>
                    <a class="" href="/post/<%= post._id %>">Go to the post</a>
                    <%} %>
            <% })%>

    </div>

            <%- include('./partials/footer') -%>


        